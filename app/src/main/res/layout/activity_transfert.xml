<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#9C27B0"
    android:backgroundTint="#673AB7"
    tools:context=".transfert">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/transfert"
        android:text="Transfert"
        android:textColor="#FFF"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="50dp"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sender"
        android:layout_below="@+id/transfert"
        android:background="#3Bffffff"
        android:hint="Numéro de compte sender"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:padding="23dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/montant"
        android:layout_below="@+id/sender"
        android:background="#3Bffffff"
        android:hint="Montant"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:padding="23dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@+id/montant"
        android:background="#30ffffff"
        android:hint="Mot de passe"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:padding="23dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="20dp"
        />


    <Button
        android:id="@+id/soldbtn"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#ffffff"
        android:textColor="@color/black"
        android:text="SOLDE" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/receveur"
        android:layout_below="@+id/soldbtn"
        android:background="#30ffffff"
        android:hint="Numéro de compte receveur"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:padding="23dp"
        />

    <Button
        android:id="@+id/validerbtn"
        android:layout_width="138dp"
        android:layout_height="60dp"
        android:layout_below="@id/receveur"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#000000"
        android:text="VALIDER"
        android:textColor="@color/design_default_color_surface" />


</RelativeLayout>